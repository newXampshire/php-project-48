{
    "name": "hexlet/code",
    "description": "difference calculator",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "New Xampshire",
            "email": "gun19sinking@ya.ru"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "psr-4": {
            "Differ\\": "src/"
        },
        "files": [
            "src/Differ/Differ.php",
            "src/Differ/DifferBuilder.php",
            "src/Formatters/StylishFormatter.php",
            "src/Formatters/PlainFormatter.php",
            "src/Formatters/JsonFormatter.php",
            "src/Handlers/FileHandler.php",
            "tests/Unit/Formatters/Helper.php"
        ]
    },
    "scripts": {
        "test": "phpunit"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "phpunit/phpunit": "^11.1",
        "php-mock/php-mock": "^2.5"
    },
    "require": {
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^7.0"
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "phpstan/extension-installer": false
        }
    }
}
